<script>
// Client-side advanced search and filtering
document.addEventListener('DOMContentLoaded', function() {
    const locationSearch = document.getElementById('locationSearch');
    const chargerTypeFilter = document.getElementById('chargerTypeFilter');
    const minPriceInput = document.getElementById('minPrice');
    const maxPriceInput = document.getElementById('maxPrice');
    const availabilityFilter = document.getElementById('availabilityFilter');
    const applyFiltersBtn = document.getElementById('applyFilters');
    const resetFiltersBtn = document.getElementById('resetFilters');
    const chargingPoints = document.querySelectorAll('.charging-point-card');
    
    // Time conversion helper
    function convertTimeStringToMinutes(timeString) {
        if (!timeString) return -1; // Invalid or empty time
        
        const [hours, minutes] = timeString.split(':').map(Number);
        return hours * 60 + minutes;
    }
    
    // Time range checker
    function isInTimeRange(startTime, endTime, filterOption) {
        // Convert to minutes for easier comparison
        const start = convertTimeStringToMinutes(startTime);
        const end = convertTimeStringToMinutes(endTime);
        
        // If times are invalid or no specific times (24/7)
        if (start === -1 || end === -1) {
            return filterOption === '24h' || filterOption === 'all';
        }
        
        // Define time ranges in minutes
        const timeRanges = {
            'morning': { start: 360, end: 720 },     // 6AM - 12PM
            'afternoon': { start: 720, end: 1080 },  // 12PM - 6PM
            'evening': { start: 1080, end: 1440 },   // 6PM - 12AM
            'night': { start: 0, end: 360 }          // 12AM - 6AM
        };
        
        // Check if the charging point's availability overlaps with the selected time range
        if (filterOption === 'all') {
            return true;
        } else if (filterOption === '24h') {
            // Check if the charging point is available for all 24 hours
            return start === end || (!startTime && !endTime);
        } else {
            const range = timeRanges[filterOption];
            
            // Check for overlapping time ranges
            // If charging point is available all day
            if (start === end || (!startTime && !endTime)) {
                return true;
            }
            
            // Handle ranges that cross midnight
            if (start > end) {
                // Charging point availability crosses midnight
                return (start <= range.end || end >= range.start);
            } else {
                // Normal range comparison
                return (start <= range.end && end >= range.start);
            }
        }
    }
    
    function filterChargingPoints() {
        const locationTerm = locationSearch.value.toLowerCase();
        const chargerType = chargerTypeFilter.value;
        const minPrice = parseFloat(minPriceInput.value) || 0;
        const maxPrice = parseFloat(maxPriceInput.value) || Number.MAX_VALUE;
        const availability = availabilityFilter.value;
        
        chargingPoints.forEach(card => {
            // Extract data attributes
            const name = card.dataset.name.toLowerCase();
            const address = card.dataset.address.toLowerCase();
            const postcode = card.dataset.postcode ? card.dataset.postcode.toLowerCase() : '';
            const type = card.dataset.type;
            const price = parseFloat(card.dataset.price) || 0;
            const startTime = card.dataset.availableFrom;
            const endTime = card.dataset.availableTo;
            
            // Apply filters
            const matchesLocation = !locationTerm || 
                                   address.includes(locationTerm) || 
                                   postcode.includes(locationTerm) || 
                                   name.includes(locationTerm);
                                   
            const matchesType = chargerType === 'all' || type.includes(chargerType);
            const matchesPrice = price >= minPrice && price <= maxPrice;
            const matchesAvailability = isInTimeRange(startTime, endTime, availability);
            
            // Show/hide based on all filters
            if (matchesLocation && matchesType && matchesPrice && matchesAvailability) {
                card.style.display = 'block';
            } else {
                card.style.display = 'none';
            }
        });
    }
    
    function resetFilters() {
        locationSearch.value = '';
        chargerTypeFilter.value = 'all';
        minPriceInput.value = '';
        maxPriceInput.value = '';
        availabilityFilter.value = 'all';
        
        // Show all charging points
        chargingPoints.forEach(card => {
            card.style.display = 'block';
        });
    }

    // Add event listeners
    applyFiltersBtn.addEventListener('click', filterChargingPoints);
    resetFiltersBtn.addEventListener('click', resetFilters);
    
    // Real-time filtering for single input fields
    locationSearch.addEventListener('input', function() {
        if (this.value.length > 2 || this.value.length === 0) {
            filterChargingPoints();
        }
    });
});
</script>

