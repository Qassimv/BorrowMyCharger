        .then(data => {
            if (data.success) {
                alert('Charging point updated successfully.');
                location.reload(); // Reload the page to reflect the changes
            } else {
                alert('Error: ' + data.error);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('An error occurred while updating the charging point.');
        });
});

